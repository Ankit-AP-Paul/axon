generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String  @default(uuid())
  address String  @unique
  email   String? @unique
  name    String
  role    Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Role {
  PROVIDER
  CONTRACTOR
}
